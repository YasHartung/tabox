{
    "name": "Tabox Extension",
    "version": "1.0",
    "description": "Save Sessions and Logs to Tabox!",
    "permissions": ["sessions", "*://*/*", "declarativeContent", "storage", "tabs", "idle", "<all_urls>"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_icon": "Yasmin-02.png",
        "default_popup": "popup.html"
      },
      "content_scripts":[
        {
          "matches": ["http://localhost:3001/*"],
          "js": ["content.js"],
          "run_at": "document_idle"
        }
      ],
    "manifest_version": 2
  }